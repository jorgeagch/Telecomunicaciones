#include <iostream>
using namespace std;

void productoCruz(int a[3], int b[3], int res[3]) {
    res[0] = a[1]*b[2] - a[2]*b[1];
    res[1] = a[2]*b[0] - a[0]*b[2];
    res[2] = a[0]*b[1] - a[1]*b[0];
}

int main() {
    int a[3] = {1,2,3};
    int b[3] = {4,5,6};
    int res[3];

    productoCruz(a, b, res);

    cout << "Producto cruz: (" << res[0] << ", " << res[1] << ", " << res[2] << ")\n";
    return 0;
}
