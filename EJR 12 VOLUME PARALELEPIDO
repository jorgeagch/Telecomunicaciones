#include <iostream>
using namespace std;

void productoCruz(int a[3], int b[3], int res[3]) {
    res[0] = a[1]*b[2] - a[2]*b[1];
    res[1] = a[2]*b[0] - a[0]*b[2];
    res[2] = a[0]*b[1] - a[1]*b[0];
}

int productoPunto(int a[3], int b[3]) {
    return a[0]*b[0] + a[1]*b[1] + a[2]*b[2];
}

int valorAbsoluto(int x) {
    return (x<0) ? -x : x;
}

int main() {
    int a[3] = {1,0,0};
    int b[3] = {0,1,0};
    int c[3] = {1,1,1};

    int bxC[3];
    productoCruz(b, c, bxC);

    int triple = productoPunto(a, bxC);
    int volumen = valorAbsoluto(triple);

    cout << "Volumen del paralelepipedo = " << volumen << "\n";
    return 0;
}
