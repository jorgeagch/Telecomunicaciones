#include <iostream>
using namespace std;

double raiz(double x) {
    double r = x;
    for(int i=0;i<20;i++) {
        r = 0.5*(r + x/r);
    }
    return r;
}

int main() {
    double a=3, b=-1, c=2, d=0;
    double tr = a+d;
    double det = a*d - b*c;
    double disc = raiz(tr*tr - 4*det);
    double l1 = (tr+disc)/2.0;
    double l2 = (tr-disc)/2.0;

    cout << "Autovalores: " << l1 << ", " << l2 << "\n";
    cout << "Autovector de l1: (" << -b << ", " << a-l1 << ")\n";
    cout << "Autovector de l2: (" << -b << ", " << a-l2 << ")\n";
    cout << "La matriz diagonal D = diag(" << l1 << ", " << l2 << ")\n";
    return 0;
}
