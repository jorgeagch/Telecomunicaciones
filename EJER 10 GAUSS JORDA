#include <iostream>
using namespace std;

const int N = 3;

void gaussJordan(double A[N][N+1]) {
    for(int i=0;i<N;i++) {
        double pivote = A[i][i];
        for(int j=0;j<=N;j++)
            A[i][j] /= pivote;
        for(int k=0;k<N;k++) {
            if(k==i) continue;
            double factor = A[k][i];
            for(int j=0;j<=N;j++)
                A[k][j] -= factor*A[i][j];
        }
    }
}

int main() {
    double A[N][N+1] = {
        {1,2,1,4},
        {3,-1,2,5},
        {2,3,-1,1}
    };
    gaussJordan(A);
    cout << "Solucion:\n";
    for(int i=0;i<N;i++)
        cout << "x" << i+1 << " = " << A[i][N] << "\n";
    return 0;
}
