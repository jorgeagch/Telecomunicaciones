#include <iostream>
using namespace std;

double raiz(double x) {
    double r = x;
    for(int i=0;i<20;i++) {
        r = 0.5*(r + x/r);
    }
    return r;
}

int main() {
    double a=2, b=1, c=1, d=2;
    double tr = a+d;
    double det = a*d - b*c;
    double disc = raiz(tr*tr - 4*det);
    double lambda1 = (tr+disc)/2.0;
    double lambda2 = (tr-disc)/2.0;

    cout << "Valores propios: " << lambda1 << ", " << lambda2 << "\n";
    cout << "Vector propio de lambda1: (" << -b << ", " << a-lambda1 << ")\n";
    cout << "Vector propio de lambda2: (" << -b << ", " << a-lambda2 << ")\n";

    return 0;
}
